<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_15sdp"

            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="1.7"
                android:fontFamily="@font/heebo_medium"
                android:gravity="start"
                android:text="Channel"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/edit_backgound">

            <!--        <com.jaredrummler.materialspinner.MaterialSpinner-->
            <!--            android:id="@+id/spinner_chennel"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_centerVertical="true"-->
            <!--            android:layout_marginStart="@dimen/_4sdp"-->
            <!--            android:layout_marginTop="@dimen/_2sdp"-->
            <!--            android:layout_marginEnd="@dimen/_5sdp"-->
            <!--            android:clickable="false"-->
            <!--            android:hint="@string/select_channel"-->
            <!--            android:textSize="@dimen/_11sdp"-->
            <!--            app:ms_hint_color="@color/black"-->
            <!--            app:ms_padding_left="@dimen/_4sdp"-->
            <!--            app:ms_text_color="@color/black" />-->

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/spinner_chennel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:gravity="center"
                android:visibility="gone"
                app:smsp_enableFloatingLabel="false"
                app:smsp_hint="Please Select Warehouse"
                app:smsp_hintColor="@color/black"
                app:smsp_itemColor="@color/black"
                app:smsp_itemListColor="@color/black"
                app:smsp_itemListHintBackgroundColor="@color/white"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/black"
                app:smsp_underlineColor="@color/white"
                app:smsp_underlineSize="0dp" />

            <TextView
                android:id="@+id/searchRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/heebo_medium"
                android:gravity="start"
                android:padding="@dimen/_5sdp"
                android:layout_toStartOf="@id/image"
                android:text="Select Channel"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/_11sdp"
                app:drawableTint="@color/white" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/baseline_keyboard_arrow_down_24" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/validate_and_pack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/app_common_color"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/validate_pack_orders"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        app:drawableTint="@color/white" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dispacth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/app_common_color"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Quick Dispatch"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        app:drawableTint="@color/white" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ship_orders"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/app_common_color"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Ship Order"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        app:drawableTint="@color/white" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/start_processing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/app_common_color"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_3sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text=" Start Processing Returns"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        app:drawableTint="@color/white" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/versionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:fontFamily="@font/heebo_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Channel"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

</LinearLayout>