<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".return_processing.ReturnProcessingFragment">

    <LinearLayout
        android:id="@+id/hearder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/oneByOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="true"
                    android:padding="4dp"
                    android:text="Process Manually One By One"
                    android:textSize="@dimen/_10sdp" />

                <!--adding a radio button -->
                <RadioButton
                    android:id="@+id/markAsGood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="false"
                    android:padding="4dp"
                    android:text="Mark Scanned Orders as Good Return"
                    android:textSize="@dimen/_10sdp" />


                <RadioButton
                    android:id="@+id/markAsBad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="false"
                    android:padding="4dp"
                    android:text="Mark Scanned Orders as Bad Return"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:background="@drawable/spinner_backgound">

            <!--                <com.jaredrummler.materialspinner.MaterialSpinner-->

            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_centerVertical="true"-->
            <!--                    android:layout_marginStart="@dimen/_4sdp"-->
            <!--                    android:layout_marginTop="@dimen/_2sdp"-->
            <!--                    android:layout_marginEnd="@dimen/_5sdp"-->
            <!--                    android:clickable="false"-->
            <!--                    android:textSize="@dimen/_11sdp"-->
            <!--                    app:ms_hint_color="@color/black"-->
            <!--                    app:ms_padding_left="@dimen/_4sdp"-->
            <!--                    app:ms_text_color="@color/black" />-->


            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/spinner_retrunType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:smsp_enableFloatingLabel="false"
                app:smsp_hint="Process Manually One By One"
                app:smsp_hintColor="@color/black"
                app:smsp_itemColor="@color/black"
                app:smsp_itemListColor="@color/black"
                app:smsp_itemListHintBackgroundColor="@color/white"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/black"
                app:smsp_underlineColor="@color/white" />


        </RelativeLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp" />

        <LinearLayout
            android:id="@+id/dataLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/successLienar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#98FF9C"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/sucess" />

                <TextView
                    android:id="@+id/successMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ErrorLienar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFC2BE"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/error" />

                <TextView
                    android:id="@+id/errorCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/barCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/errorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/okBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="@dimen/_4sdp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|end"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_22sdp"
                        android:paddingVertical="@dimen/_12sdp"
                        android:text="OK"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
